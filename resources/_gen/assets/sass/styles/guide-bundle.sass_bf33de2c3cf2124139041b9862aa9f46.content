.guide main{width:100%;padding-right:0}.guide section{display:flex;flex-direction:column}.guide ol{display:block;max-width:100vw;list-style:none;padding:0}.guide li{display:flex;float:left;padding:.5em;border:1px solid #ccc;border-radius:5px;margin-right:1em;margin-bottom:1em;box-shadow:0 0 5px #eee}.guide .shortcut{display:flex;align-items:baseline;width:15em;font-size:1.3rem}.guide .shortcut.multiline{flex-direction:column}.guide .plus{display:flex;justify-content:center;width:1.2em}.guide .or{margin-left:.5em;margin-right:.5em}.guide .click{padding-left:.2em}.guide .explaination{width:15em;padding-top:.2em}.guide .key{font-family:average sans,sans-serif;color:#2d3748;width:50px;height:50px;margin:2px;border-width:3px 7px 10px;border-style:solid;border-radius:4px;background:#d3cfcc;border-color:#ece8e4 #dedad6 #c9c4c4;float:left}@media print{.guide .key{width:40px}}@media print{.guide .key{height:40px}}.guide .key.medium{width:70px}@media print{.guide .key.medium{width:60px}}.guide .key.medium .keycap{width:56px}@media print{.guide .key.medium .keycap{width:60px}}.guide .key.large{width:150px}@media print{.guide .key.large{width:140px}}.guide .key.large .keycap{width:136px}@media print{.guide .key.large .keycap{width:140px}}.guide .key .keycap{display:flex;justify-content:center;align-items:center;width:36px;height:37px;font-size:22px;line-height:1;background:#f5f3f1;background:-webkit-linear-gradient(left,#e5e2e1,#f5f3f1,#e5e2e1);background:-moz-linear-gradient(left,#e5e2e1,#f5f3f1,#e5e2e1);background:-ms-linear-gradient(left,#e5e2e1,#f5f3f1,#e5e2e1);background:-o-linear-gradient(left,#e5e2e1,#f5f3f1,#e5e2e1);background:linear-gradient(left,#e5e2e1,#f5f3f1,#e5e2e1);box-shadow:0 0 10px rgba(0,0,0,.15);border-radius:4px;position:relative}@media print{.guide .key .keycap{width:40px}}@media print{.guide .key .keycap{height:40px}}