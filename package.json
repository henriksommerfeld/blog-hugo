{
  "name": "blog-hugo",
  "version": "1.0.0",
  "description": "Henrik's blog using static site engine Hugo",
  "dependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "alpinejs": "2.3.5",
    "babelify": "10.0.0",
    "browserify": "16.5.1",
    "lazysizes": "5.2.1-rc2",
    "lunr": "2.3.8",
    "shx": "^0.3.2",
    "uglifyify": "5.0.2"
  },
  "devDependencies": {
    "@testing-library/cypress": "6.0.0",
    "cypress": "4.6.0",
    "cypress-plugin-tab": "^1.0.5",
    "start-server-and-test": "1.11.0"
  },
  "scripts": {
    "install:prod": "yarn install --production",
    "clean": "shx rm -f static/*.js",
    "clean:public": "shx rm -rf public",
    "build:js-libs": "browserify -t [ babelify --presets [ @babel/preset-env ] ] -g uglifyify scripts/libraries.js > assets/libraries.js",
    "build:assets": "npm run clean && npm run build:js-libs",
    "build": "npm run build:assets && npm run clean:public && hugo version && hugo --gc --minify && npm run index:prod",
    "hugo:watch": "hugo server --config config-dev.toml --bind=0.0.0.0",
    "index:prod": "node build/index-search.js public/search-index.json",
    "index": "node build/index-search.js static/search-index.json",
    "start": "npm run build:js-libs && hugo && npm run index && npm run hugo:watch",
    "cypress:cli": "cypress run",
    "cypress:open": "cypress open",
    "test": "start-server-and-test http://localhost:1313 cypress:cli",
    "test:open": "start-server-and-test http://localhost:1313 cypress:open"
  },
  "resolutions": {
    "cypress": "4.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/henriksommerfeld/blog-hugo.git"
  },
  "keywords": [
    "blog",
    "hugo"
  ],
  "author": "Henrik Sommerfeld",
  "license": "MIT"
}
