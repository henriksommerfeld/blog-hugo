{
  "name": "blog-hugo",
  "version": "1.0.0",
  "description": "Henrik's blog using static site engine Hugo",
  "dependencies": {
    "lazysizes": "^5.1.2",
    "lunr": "2.3.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@testing-library/cypress": "^5.0.2",
    "babelify": "10.0.0",
    "browserify": "16.5.0",
    "concurrently": "5.0.0",
    "cypress": "^3.6.1",
    "del-cli": "^3.0.0",
    "onchange": "6.1.0",
    "serve": "^11.2.0",
    "shx": "^0.3.2",
    "start-server-and-test": "^1.10.6"
  },
  "scripts": {
    "clean": "shx rm -f static/*.js",
    "clean:public": "shx rm -rf public",
    "js:build": "browserify scripts/main.js --debug -o assets/site-bundle.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "js:build:prod": "browserify scripts/main.js -o assets/site-bundle.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "js:watch": "onchange scripts -- npm run js:build && npm run index",
    "build:assets": "npm run clean && npm run js:build:prod",
    "image:compress": "jpegoptim static/images/*.jpg && optipng static/images/*.png",
    "hugo:watch": "hugo serve --config config-dev.toml --bind=0.0.0.0",
    "index:prod": "node build/index-search.js public/search-index.json",
    "index": "node build/index-search.js static/search-index.json",
    "start": "npm run js:build && concurrently --kill-others \"npm run js:watch\" \"npm run hugo:watch\"",
    "build": "npm run build:assets && npm run clean:public && hugo version && hugo && npm run index:prod",
    "test": "cypress run",
    "test:open": "cypress open",
    "cy": "start-server-and-test start http://localhost:1313 test:open",
    "serve": "serve public -l 1313",
    "test:ci": "npm run build && start-server-and-test serve http://localhost:1313 test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/henriksommerfeld/blog-hugo.git"
  },
  "keywords": [
    "blog",
    "hugo"
  ],
  "author": "Henrik Sommerfeld",
  "license": "MIT"
}